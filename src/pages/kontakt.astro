---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

const subject = Astro.url.searchParams.get('subject') || '';
---

<Layout 
  title="Kontakt" 
  description="Skontaktuj się z hodowlą Kociak z Bajki*PL. Chętnie odpowiemy na pytania dotyczące kotów rasy Ragdoll."
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-lavender-100 via-lavender-50 to-rose-gold-light/20 py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl font-heading font-bold text-lavender-800 mb-4">
        Kontakt
      </h1>
      <p class="text-xl text-lavender-600 max-w-2xl mx-auto">
        Masz pytania? Chętnie odpowiemy! Skontaktuj się z nami w wybrany sposób.
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-lavender-400 to-rose-gold mx-auto mt-8 rounded-full"></div>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="grid lg:grid-cols-5 gap-12">
          <!-- Contact Info -->
          <div class="lg:col-span-2">
            <h2 class="font-heading text-2xl font-bold text-lavender-700 mb-6">
              Informacje kontaktowe
            </h2>
            
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-lavender-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-rose-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-lavender-700 mb-1">E-mail</h3>
                  <a href="mailto:kontakt@kociakzbajki.pl" class="text-lavender-600 hover:text-rose-gold transition-colors">
                    kontakt@kociakzbajki.pl
                  </a>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-lavender-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-rose-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-lavender-700 mb-1">Lokalizacja</h3>
                  <p class="text-lavender-600">Polska</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-lavender-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-rose-gold" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-lavender-700 mb-1">Facebook</h3>
                  <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" class="text-lavender-600 hover:text-rose-gold transition-colors">
                    Kociak z Bajki*PL
                  </a>
                </div>
              </div>
            </div>
            
            <!-- Additional Info -->
            <div class="mt-8 p-6 bg-lavender-50 rounded-xl">
              <h3 class="font-heading text-lg font-semibold text-lavender-700 mb-3">
                Zanim napiszesz
              </h3>
              <p class="text-lavender-600 text-sm leading-relaxed">
                Zachęcamy do zapoznania się z sekcją 
                <a href="/zanim-kupisz-kota" class="text-rose-gold hover:underline">"Zanim kupisz kota"</a>, 
                gdzie znajdziesz odpowiedzi na najczęściej zadawane pytania.
              </p>
            </div>
          </div>
          
          <!-- Contact Form -->
          <div class="lg:col-span-3">
            <div class="bg-lavender-50 rounded-2xl p-8">
              <h2 class="font-heading text-2xl font-bold text-lavender-700 mb-6">
                Napisz do nas
              </h2>
              <ContactForm subject={subject} />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
