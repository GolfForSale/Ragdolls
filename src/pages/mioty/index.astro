---
import Layout from '../../layouts/Layout.astro';
import LitterCard from '../../components/LitterCard.astro';
import { getCollection } from 'astro:content';

const litters = await getCollection('litters');
const sortedLitters = litters.sort((a, b) => {
  // Sort by status (available first), then by date
  const statusOrder = { available: 0, reserved: 1, planned: 2, sold: 3 };
  const statusDiff = statusOrder[a.data.status] - statusOrder[b.data.status];
  if (statusDiff !== 0) return statusDiff;
  
  const dateA = a.data.birthDate ? a.data.birthDate.getTime() : 0;
  const dateB = b.data.birthDate ? b.data.birthDate.getTime() : 0;
  return dateB - dateA;
});
