---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Hodowla bajkowych kot√≥w rasy Ragdoll. Kociak z Bajki*PL - zarejestrowana hodowla w Krakowskim Klubie Felinologicznym.",
  image = "/images/og-image.jpg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title} | Kociak z Bajki*PL</title>
    <meta name="title" content={`${title} | Kociak z Bajki*PL`} />
    <meta name="description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Kociak z Bajki*PL`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content="pl_PL" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | Kociak z Bajki*PL`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Nunito:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Netlify Identity Widget (for CMS authentication) -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    
    <!-- Netlify Identity - handle confirmation and login -->
    <script is:inline>
      (function() {
        // Wait for netlifyIdentity to be available
        function initIdentity() {
          if (typeof window.netlifyIdentity === 'undefined') {
            setTimeout(initIdentity, 100);
            return;
          }
          
          var netlifyIdentity = window.netlifyIdentity;
          
          // Handle login redirect
          netlifyIdentity.on("init", function(user) {
            if (!user) {
              netlifyIdentity.on("login", function() {
                document.location.href = "/admin/";
              });
            }
          });
          
          // Handle errors
          netlifyIdentity.on("error", function(err) {
            console.error("Netlify Identity Error:", err);
          });
          
          // Check for tokens in URL hash and open modal
          var hash = window.location.hash;
          if (hash) {
            if (hash.includes("confirmation_token") || 
                hash.includes("recovery_token") || 
                hash.includes("invite_token") ||
                hash.includes("access_token")) {
              netlifyIdentity.open();
            }
          }
        }
        
        // Start initialization after DOM is ready
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initIdentity);
        } else {
          initIdentity();
        }
      })();
    </script>
  </body>
</html>
